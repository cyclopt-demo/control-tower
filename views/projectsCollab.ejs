<!doctype html>
<html>
    <% include header %>
    <body id="collaborations">
	<!-- Begin Header -->
	<header id="header">
	    <% include navbar %>
	</header>
	<!-- End Header -->
	<!-- Begin Main Content -->
	<div class="content" id="main-content">
	    <div class="container section">
		<div class="row">
		    <div class="col-md-10 col-md-offset-1 section-title">
                        <h1 class="no-margin">Collaborations</h1>
                    </div>
		</div>
		<div class="row">
		    <div class="col-md-10 col-md-offset-1 section-body clearfix">
			<!-- Table of Projects I collaborate -->
			<% if(projectnames.length > 0) { %>
			<table class="table table-striped table-bordered">
    			    <thead>
    				<tr>
        			    <th>#</th>
        			    <th>Project Name</th>
        			    <th></th>
    				</tr>
    			    </thead>
    			    <tbody>
				<% for (var i in projectnames) { %>
    			        <tr>
    			            <td data-title="#"><%= i %></td>
    				    <td data-title="Project Name"><%= projectnames[i].project_name %></td>
    				    <!-- Î’utton to edit the project's details-->
    				    <td>
					<% var manageurl="/collabprojects?project_name="+ projectnames[i].project_name %>
					<a href=<%= manageurl %> class="btn btn-danger btn-sm">
    					    <span class="fa fa-pencil"></span> Edit Project
    					</a>
    				    </td>
				</tr>
				<% } %>
			    </tbody>
    			</table>
			<% } %>
                    </div>
		</div>
	    </div>
        </div>
	<!-- End Main Content -->

        <% include footer %>
    </body>
</html>
